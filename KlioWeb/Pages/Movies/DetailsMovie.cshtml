        $(document).ready(function () {
            Player = new Playerjs({
                id: "player",
                file: fileUrl,
                poster: posterUrl,
                title: "",
                autoplay: 0
            });

            $('#trailer_modal').on('shown.bs.modal', function () {
                tPlayer = new Playerjs({
                    id: "trailer",
                    file: tFileUrl,
                    poster: tPosterUrl,
                    title: "",
                    autoplay: 0
                });
            });

            $("#trailer_modal").on("hidden.bs.modal", function () {
                tPlayer.api("stop");
            });

            $("#sidebarSearchBtn").on('click', function () {
                var searchText = $("#sidebarSearch").val();
                if (searchText) {
                    event.preventDefault();
                    var searchText = $('#sidebarSearch').val();
                    window.location = encodeURI("/movies/search?title=" + searchText);
                }
            });

            $('#sidebarSearch').keypress(function (e) {
                var key = e.which;
                if (key == 13)  // the enter key code
                {
                    $('#sidebarSearchBtn').click();
                    return false;
                }
            });

            var $grid = $('.isotope-active').isotope({
                itemSelector: '.griditem',
                masonry: {
                    columnWidth: 275
                }
            });

            $('.nav-item').on('click', 'a', function () {
                var filterValue = $(this).attr('data-filter');
                console.log(filterValue);
                $grid.isotope({ filter: filterValue });
                $('.nav-link').removeClass('active');
                $(this).addClass('active');
                event.preventDefault();
            });

            // resetDivs(".griditem");
        })

        function resetDivs(className) {
            var divs = document.querySelectorAll(className);
            console.log(divs);
            for (var i = 0; i < divs.length; i++) divs[i].removeAttribute("style");
            for (var i = 0; i < divs.length; i++) divs[i].css("display", "flex");
        }
    </script>
