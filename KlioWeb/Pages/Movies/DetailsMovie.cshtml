                                <p>@Model.model.Movie.ViewCounter <i class="fa-regular fa-eye"></i></p>
                            </div>
                        </div>
                        <div class="row isotope-active">
                            @foreach (var inf in Model.model.MovieInfos)
                            {
                                switch (inf.Info)
                                {
                                    case "FullDescription":
                                        @Html.Raw(infoFullDescr(inf))
                                        break;
                                    case "Tracklist":
                                        @Html.Raw(infoTracklist(inf))
                                        break;
                                    case "OriginalLanguage":
                                        switch (inf.Text)
                                        {
                                            case "uk":
                                                @Html.Raw(infoOrigLangUA(inf))
                                                break;
                                            case "en":
                                                @Html.Raw(infoOrigLangEN(inf))
                                                break;
                                            case "pl":
                                                @Html.Raw(infoOrigLangPL(inf))
                                                break;
                                            case "es":
                                                @Html.Raw(infoOrigLangES(inf))
                                                break;
                                            case "de":
                                                @Html.Raw(infoOrigLangDE(inf))
                                                break;
                                        }
                                        break;
                                    case "TranslateLanguage":
                                        switch (inf.Text)
                                        {
                                            case "uk":
                                                @Html.Raw(infoTransLangUA(inf))
                                                break;
                                        }
                                        break;
                                    case "Youtube":
                                        @Html.Raw(infoYoutubeUrl(inf))
                                        break;
                                    case "KlioYoutube":
                                        @Html.Raw(infoKlioYoutube(inf))
                                        break;
                                    case "InstagramVideo":
                                        @Html.Raw(infoInstagramVideoUrl(inf))
                                        break;
