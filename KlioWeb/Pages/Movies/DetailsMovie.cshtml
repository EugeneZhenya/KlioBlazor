@page "/movie/{MovieId:int}/{MovieName?}"
@using KlioBlazor.Shared.Entities
@using KlioBlazor.Shared.Enums
@model KlioWeb.Pages.Movies.DetailsMovieModel
@inject CurrentCategory currentCategory

@{
    string downloadUrl = string.Empty;
    string OriginalTitle = string.Empty;
    string Slogan = string.Empty;
    OpenGraphModel allMeta = new OpenGraphModel();

    allMeta.Title = Model.model.Movie.Title;
    allMeta.Description = Model.model.Movie.Title + " дивитися он-лайн";
    allMeta.Robots = "all";
    allMeta.Author = "Eugene Baklanov";
    allMeta.Keywords = "Klio, архів, video, відео, історія, література, політика, музика, music, наживо, трансляція, пряма трансляція, дивитися он-лайн, фільм, серіал, сезон, епізод, мультфільм, мультсерал, ";
    foreach (var word in Model.model.Keywords)
    {
        allMeta.Keywords += word.Word + ", ";
    }
    allMeta.Type = "article";
    allMeta.Image = $"{Model.AppState.KlioContentUrl}movies/{Model.MovieId}/cover.jpg";
    allMeta.SecureImage = allMeta.Image;
    allMeta.ImageWidth = 1280;
    allMeta.ImageHeight = 720;
    allMeta.ImageType = "image/jpeg";
    allMeta.Url = $"{Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}";
    allMeta.SiteName = "Медійний архів 'KLIO'";
    allMeta.Locale = "uk_UA";
    allMeta.FBAdmins = "100007730161243,100002204709179";
    allMeta.FBAppId = "885986785210347";
    allMeta.Image2 = $"{Model.AppState.KlioContentUrl}movies/{Model.MovieId}/background.jpg";
    allMeta.SecureImage2 = allMeta.Image2;
    allMeta.ImageWidth2 = 1920;
    allMeta.ImageHeight2 = 1080;
    allMeta.ImageType2 = "image/jpeg";

    currentCategory.SetCurrentCategory(Model.model.Movie.Partition.CategoryId);

    ViewBag.Meta = allMeta;

    if (Model.model.MovieInfos.Where(x => x.Info == "DownloadUrl").FirstOrDefault() != null)
        {
            downloadUrl = Model.model.MovieInfos.Where(x => x.Info == "DownloadUrl").FirstOrDefault().Text;
        };

        if (Model.model.Movie.MovieInfos.Where(x => x.Info == "OriginalTitle").FirstOrDefault() != null)
        {
            OriginalTitle = Model.model.MovieInfos.Where(x => x.Info == "OriginalTitle").FirstOrDefault().Text;
        };

        if (Model.model.Movie.MovieInfos.Where(x => x.Info == "Slogan").FirstOrDefault() != null)
        {
            Slogan = Model.model.MovieInfos.Where(x => x.Info == "Slogan").FirstOrDefault().Text;
        };
}

<section class="movie-details-area" data-background="@($"{Model.AppState.KlioContentUrl}movies/{Model.MovieId}/background.jpg")">
    <div class="movie-details-overlay">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="col-xl-6 col-lg-6">
                    <div class="movie-details-content">
                        <div class="section-title title-style-two">
                            <span class="sub-title">@Html.Raw(Model.model.Movie.Partition.Category.Name)</span>
                        </div>
                        <h5><a href="partition/@Model.model.Movie.Partition.Id/@StringUtilities.Translit(Model.model.Movie.Partition.Name)">@Html.Raw(Model.model.Movie.Partition.Name)</a></h5>
                        <h2>
                            @for (int i = 0; i < SeparateTitle(Model.model.Movie.Title).Length; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    @Html.Raw(SeparateTitle(Model.model.Movie.Title)[i])
                                }
                                else
                                {
                                    <span>@Html.Raw(SeparateTitle(Model.model.Movie.Title)[i])</span>
                                }
                            }
                        </h2>
                        @if (!string.IsNullOrEmpty(OriginalTitle))
                        {
                            <h3 style="margin-bottom: 20px;">
                                @for (int i = 0; i < SeparateTitle(OriginalTitle).Length; i++)
                                {
                                    if (i % 2 == 0)
                                    {
                                        <span style="color: #e4e2e2;">@Html.Raw(SeparateTitle(OriginalTitle)[i])</span>
                                    }
                                    else
                                    {
                                        <span style="color: #fd0e30;">@Html.Raw(SeparateTitle(OriginalTitle)[i])</span>
                                    }
                                }
                            </h3>
                        }
                        <div class="banner-meta">
                            <ul>
                                <li class="quality">
                                    <a href="age/@((AgeCategory)Model.model.Movie.AgeLimit)">
                                        <span style="@AgeLimitColor(Model.model.Movie.AgeLimit)">@Model.model.Movie.AgeLimit+</span>
                                    </a>
                                </li>
                                <li class="category">
                                    @for (int i = 0; i < Model.model.Genres.Count; i++)
                                    {
                                        if (i < Model.model.Genres.Count - 1)
                                        {
                                            @Html.Raw(linkGenre(Model.model.Genres[i]))

                                            <text>,</text>
                                        }
                                        else
                                        {
                                            @Html.Raw(linkGenre(Model.model.Genres[i]))
                                        }
                                    }
                                </li>
                                <li class="release-time">
                                    <span><i class="fa-solid fa-calendar-days"></i> <a href="year/@Model.model.Movie.ReleaseDate.Value.Year">@Model.model.Movie.ReleaseDate.Value.Year</a></span>
                                    <span><i class="fa-solid fa-clock"></i> @Html.Raw(StringUtilities.SecondsToMinutes(Model.model.Movie.Duration))</span>
                                </li>
                            </ul>
                        </div>
                        <div class="banner-meta">
                            <ul>
                                <li class="category">
                                    @foreach (var country in Model.model.Countries)
                                    {
                                        <img src="@($"{Model.AppState.KlioContentUrl}countries/{country.FlagUrl}")" alt="@Html.Raw(country.Name)" style="width: 25px; margin: 0 5px 0 10px;" />
                                        <a href="country/@country.Id/@StringUtilities.Translit(@country.Name)">@Html.Raw(country.Name)</a>
                                    }
                                </li>
                            </ul>
                        </div>
                        @Html.Raw(Model.model.Movie.Summary)
                        @if (Model.model.Creators.Count > 0 || Model.model.Movie.HasTrailer)
                        {
                            <div class="movie-details-prime">
                                <ul style="min-width: 100%;">
                                    <li class="streaming">
                                        @foreach (var creator in Model.model.Creators)
                                        {
                                            <a href="creator/@creator.Id/@StringUtilities.Translit(creator.Title)">
                                                <img src="@($"{Model.AppState.KlioContentUrl}creators/{creator.LogoUrl}")" alt="@Html.Raw(creator.Title)" style="width: 50px;" title="@Html.Raw(creator.Title)" />
                                            </a>
                                        }
                                    </li>
                                    @if (Model.model.Movie.HasTrailer)
                                    {
                                        <li class="watch">
                                            <a class="btn popup-video" style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#trailer_modal">
                                                <i class="fa-solid fa-play"></i> Вістовик
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6" style="align-self: start; margin-top: 10px;">
                    <div class="movie-details-img">
                        <div id="player"></div>
                        @if (!string.IsNullOrEmpty(Slogan))
                        {
                            <div style="text-align: center; margin-top: 20px;">
                                <h4 style="color: #e4e2e2;"><i>@Html.Raw(Slogan)</i></h4>
                            </div>
                        }
                        <div style="text-align: center; margin-top: 20px;">
                            <i>Ця відеопрограма подається на цьому сайті виключно для ознайомлення. Тому якість зображення та звуку навмисно занижена. Після ознайомлення, будь ласка, придбайте цю відеопрограмму в офіційних розповсюджувачів.</i>
                        </div>
                        <div class="movie-details-prime mb-5">
                            <ul style="min-width: 100%;">
                                <li class="share"><i class="fa-solid fa-share-nodes"></i><br />Поширити</li>
                                <li class="streaming" style="text-align: center; margin-right: 25px;">
                                    <div class="fb-share-button" data-href="@($"{Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}")" data-layout="" data-size="">
                                        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=@(Uri.EscapeDataString($"{Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}"))&amp;src=sdkpreparse">
                                            <h6 class="share_link"><i class="fa-brands fa-facebook"></i></h6>
                                            <span>Facebook</span>
                                        </a>
                                    </div>
                                </li>
                                <li class="streaming" style="text-align: center; margin-right: 25px;">
                                    <a target="_blank" href="https://twitter.com/share?url=@(Uri.EscapeDataString($"{Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}"))">
                                        <h6 class="share_link"><i class="fa-brands fa-x-twitter"></i></h6>
                                        <span>X-Twitter</span>
                                    </a>
                                </li>
                                <li class="streaming" style="text-align: center; margin-right: 25px;">
                                    <a target="_blank" href="https://t.me/share/url?url=@(Uri.EscapeDataString($"{Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}&text={Model.model.Movie.Title}"))">
                                        <h6 class="share_link"><i class="fa-brands fa-telegram"></i></h6>
                                        <span>Telegram</span>
                                    </a>
                                </li>
                                <li class="streaming" style="text-align: center;">
                                    <a target="_blank" href="@(Html.Raw($"mailto:?subject={Model.model.Movie.Title}&body=Раджу подивитися цікавий фільм '{Model.model.Movie.Title} ({Model.model.Movie.ReleaseDate.Value.Year})' за цим посиланням: {Request.Scheme}://{Request.Host}{Request.Path}{Request.QueryString}"))">
                                        <h6 class="share_link"><i class="fa-brands fa-telegram"></i></h6>
                                        <span>Пошта</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div id="fb-root"></div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(downloadUrl))
                {
                    <div class="movie-details-btn" style="display: block; text-align: right;">
                        <a href="@downloadUrl" class="download-btn" download style="position: unset; bottom: 0; right: 0; transform: unset; padding: 20px 35px; display: inline-block; margin-left: 15px;" target="_blank">Завантажити <img src="img/download.svg" alt="Завантажити" style="transform: unset;"></a>
                    </div>
                }
            </div>
        </div>

        @if (Model.model.Movie.HasTrailer)
        {
            <partial name="TrailerModal" />
        }
    </div>
</section>

