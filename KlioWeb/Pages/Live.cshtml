@section Scripts {
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/uk_UA/sdk.js#xfbml=1&version=v19.0&appId=146729146676782" nonce="34AbfMpj"></script>
    <script>
        var allProgrames = @Html.Raw(Model.jsonString);
        var curTitle = [];
        var curPercent = 0;
        var player;

        $(document).ready(function () {
            player = new Playerjs({ id: "player", file: "@Model.AppState.KlioStreamUrl", poster: "@Model.AppState.KlioStreamPoster", title: "", autoplay: 0 });

            UpdateCurState();
            setInterval(function () {
                UpdateCurState();
            }, 1000);
        })

        function UpdateCurState() {
            const element = document.getElementById("playingNow");
            const curTitleElement = document.getElementById("curTitle");
            const descElement = document.getElementById("curDesc");

            var startDate = new Date();

            var selProgrammes = allProgrames.filter(a => {
                var date = new Date(a.StopDatetIme);
                return (date >= startDate);
            });

            if (selProgrammes.length > 0) {
                if (selProgrammes[0].Title.Text.startsWith("т/с ") || selProgrammes[0].Title.Text.startsWith("х/ф ") || selProgrammes[0].Title.Text.startsWith("д/с ") || selProgrammes[0].Title.Text.startsWith("д/ф ")) {
                    curTitle = SeparateString(selProgrammes[0].Title.Text.substring(4));
                }
                else {
                    curTitle = SeparateString(selProgrammes[0].Title.Text);
                }
            } else {
                curTitle = SeparateString("Програма передач наразі недоступна");
            }

            var curTitleHTML = "";
            for (var i = 0; i < curTitle.length; i++)
            {
                if (isEven(i)) {
                    curTitleHTML += curTitle[i];
                }
                else {
                    curTitleHTML += " <span>" + curTitle[i] + "</span>";
                }
            }

            if (selProgrammes.length > 0) {
                var TotalSeconds = new Date(selProgrammes[0].StopDatetIme) - new Date(selProgrammes[0].StartDatetIme);
                var NowSeconds = new Date() - new Date(selProgrammes[0].StartDatetIme);
                curPercent = Math.round(NowSeconds / TotalSeconds * 100);

                if (curPercent < 0) {
                    curPercent = 0;
                    $('#nowOrNot').html("Незабаром");
                }
                else {
                    $('#nowOrNot').html("В етері зараз");
                }
            }

            var sheduleHTML = "";
            if (selProgrammes.length > 0) {
                $.each(selProgrammes, function (index, value) {
                    sheduleHTML += "<li><a>" + startTime(value.StartDatetIme) + " <i class='fa-solid fa-play'></i>" + value.TitleBrief + "</a>";
                    sheduleHTML += "<span class='duration' style='width: 70px;'><i class='fa - regular fa - clock'></i> " + GetDuration(value.StartDatetIme, value.StopDatetIme) + " хв</span></li>";
                    if (selProgrammes.length > 4) {
                        if (index == 4) {
                            return false;
                        }
                    }
                });
            }

            $('#percentage').width(curPercent + '%');
            curTitleElement.innerHTML = curTitleHTML;
            $('#schedule').html(sheduleHTML);

            if (selProgrammes.length > 0) {
                descElement.innerHTML = selProgrammes[0].Desc.Text;
                element.innerHTML = FirstCharUpper(selProgrammes[0].Title.Text);
            }
            else {
                $('#nowOrNot').html("");
                element.innerHTML = "Програма передач наразі недоступна";
            }
        }

        function startTime(corTime) {
            var timeDay = new Date(corTime);
            var h = timeDay.getHours();
            var m = timeDay.getMinutes();
            var s = timeDay.getSeconds();
            // add a zero in front of numbers<10
            h = checkTime(h);
            m = checkTime(m);
            s = checkTime(s);
            return h + ":" + m;
        }

        function checkTime(i) {
            if (i < 10) {
                i = "0" + i;
            }
            return i;
        }

        function SeparateString(inpString)
        {
            var words = inpString.split(/(?<=[.\-/,:…])/);

            if (words.length == 1 || words.length == 0)
            {
                words = [];

                var allWords = inpString.split(" ");
                var part1 = allWords.slice(0, allWords.length / 2).join(" ");
                var part2 = allWords.slice(allWords.length / 2, allWords.length).join(" ");

                words.push(part1);
                words.push(part2);
            }
            return words;
        }

        function GetDuration(start, stop) {
            var diffInSeconds = new Date(stop) - new Date(start);
            return Math.round(diffInSeconds / 60000);
        }

        function FirstCharUpper(str) {
            strVal = '';
            strVal += str.substring(0, 1).toUpperCase() + str.substring(1, str.length);
            return strVal;
        }

        function isEven(number) {
            return number % 2 === 0;
        }

        function isOdd(number) {
            return number % 2 !== 0;
        }

    </script>
}
