@functions {
    private int GetCatId(string name)
    {
        int catId = 0;

        switch (name)
        {
            case "history":
                catId = 1;
                break;
            case "literacy":
                catId = 2;
                break;
            case "music":
                catId = 3;
                break;
            case "movies":
                catId = 4;
                break;
            case "serials":
                catId = 6;
                break;
            case "animation":
                catId = 5;
                break;
            case "series":
                catId = 7;
                break;
        }

        return catId;
    }
}
