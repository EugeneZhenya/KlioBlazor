<!DOCTYPE html>
<html lang="uk" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    
    <partial name="MetaData" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/OwlCarousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/default.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="~/KlioWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/flickity/flickity.css" media="screen">
    <link rel="icon" type="image/png" href="favicon.png" />

    <!-- Font Awesome Solid + Brands -->
    <link href="fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="fontawesome/css/solid.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" /> <!-- https://animate.style/ -->
    <link href="~/aos/aos.css" rel="stylesheet"> <!-- http://michalsnik.github.io/aos/ -->
</head>
<body>
    <!-- Scroll-top -->
    <button class="scroll-top scroll-to-target" data-target="html">
        <i class="fa-solid fa-angle-up"></i>
    </button>
    <!-- Scroll-top-end-->

    <header>
        <partial name="NavMenu" />
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <partial name="FooterArea" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/OwlCarousel/owl.carousel.min.js"></script>
    <script src="~/OwlCarousel/owlcarousel2-filter.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/aos/aos.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/playerjs.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>