@page "/StatusCode/{errorId}"
@model KlioWeb.Pages.StatusCodeModel

<section class="episode-area episode-bg" style="background-image: url('img/episode_bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="movie-episode-wrap">
                    <div class="episode-top-wrap">
                        <div class="section-title">
                            <span class="sub-title">Помилка №@Model.errorId</span>
                            <h2 class="title">@Html.Raw(Model.errorDescription)</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

