<section class="ucm-area ucm-bg" style="background-image: url('img/ucm_bg_shape.png')">
    <div class="layer">
        <div class="container">
            @if (CenterHeader)
            {
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="section-title text-center mb-50">
                            <span class="sub-title">@Subtitle</span>
                            <h2 class="title">@Title</h2>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row align-items-end mb-55">
                    <div class="col-lg-6">
                        <div class="section-title text-center text-lg-start title-style-two">
                            <span class="sub-title">@Subtitle</span>
                            <h2 class="title">@Title</h2>
                        </div>
                    </div>
                </div>
            }
            <div class="tab-content">
                <div class="tab-pane fade show active">
                    <MoviesList Movies="Movies" NoRecords="@NoRecords" />
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Subtitle { get; set; }
    [Parameter] public String NoRecords { get; set; } = "Розділ не має записів.";
    [Parameter] public List<Movie> Movies { get; set; }
    [Parameter] public bool CenterHeader { get; set; } = false;
}
