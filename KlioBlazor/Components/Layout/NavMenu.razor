                                </li>
                                <li>
                                    <NavLink class="nav-link" href="Home/music" style="@CheckCategory(3)">Музика</NavLink>
                                </li>
                                <li class="menu-item-has-children">
                                    <NavLink class="nav-link" href="Home/movies" style="@CheckCategory(4, 5)">Фільми</NavLink>
                                    <ul class="submenu">
                                        <li>
                                            <NavLink class="nav-link" href="Home/movies" style="@CheckCategory(4)">Фільми</NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="nav-link" href="Home/serials" style="@CheckCategory(5)">Серіали</NavLink>
                                        </li>
                                    </ul>
                                </li>
                                <li class="menu-item-has-children">
                                    <NavLink class="nav-link" href="Home/animation" style="@CheckCategory(6, 7)">Мультфільми</NavLink>
                                    <ul class="submenu">
                                        <li>
                                            <NavLink class="nav-link" href="Home/animation" style="@CheckCategory(6)">Мультфільми</NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="nav-link" href="Home/series" style="@CheckCategory(7)">Мультсеріали</NavLink>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="header-action d-none d-md-block">
                            <ul>
                                <li class="header-search">
                                    <a style="cursor: pointer" @onclick="() => SearchModal.Open()">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </a>
                                </li>
                                <li class="header-btn">
                                    <NavLink class="btn btnlive" href="live">
                                        <span class="live-icon"></span>Наживо
                                    </NavLink>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>

                <!-- Mobile Menu  -->
                <div class="mobile-menu">
                    <div class="close-btn" @onclick="HideMobMenu">
                        <i class="fa-solid fa-xmark"></i>
                    </div>

                    <nav class="menu-box">
                        <div class="nav-logo">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                                <img src="img/logo.png" alt="" title="" />
                            </NavLink>
                        </div>
                        <div class="menu-outer">
                            <ul class="navigation">
                                <li><NavLink class="nav-link" href="Home/history" style="@CheckCategory(1)">Історія</NavLink></li>
                                <li><NavLink class="nav-link" href="Home/literacy" style="@CheckCategory(2)">Література</NavLink></li>
                                <li><NavLink class="nav-link" href="Home/music" style="@CheckCategory(3)">Музика</NavLink></li>
                                <li class="menu-item-has-children">
                                    <NavLink class="nav-link" href="Home/movies" style="@CheckCategory(4, 5)">Фільми</NavLink>
                                    <ul class="submenu" style="display: none;">
                                        <li><NavLink class="nav-link" href="Home/movies" style="@CheckCategory(4)">Фільми</NavLink></li>
                                        <li><NavLink class="nav-link" href="Home/serials" style="@CheckCategory(5)">Серіали</NavLink></li>
                                    </ul>
                                    <div class="dropdown-btn" id="mnuFilm" @onclick="@(e => DropdownToogle("mnuFilm"))">
                                        <span class="fa-solid fa-angle-down"></span>
                                    </div>
                                </li>
                                <li class="menu-item-has-children">
                                    <NavLink class="nav-link" href="Home/animation" style="@CheckCategory(6, 7)">Мультфільми</NavLink>
                                    <ul class="submenu" style="display: none;">
                                        <li><NavLink class="nav-link" href="Home/animation" style="@CheckCategory(6)">Мультфільми</NavLink></li>
                                        <li><NavLink class="nav-link" href="Home/series" style="@CheckCategory(7)">Мультсеріали</NavLink></li>
                                    </ul>
                                    <div class="dropdown-btn" id="mnuMult" @onclick="@(e => DropdownToogle("mnuMult"))">
                                        <span class="fa-solid fa-angle-down"></span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="social-links">
                            <ul class="clearfix">
                                <li>
                                    <a href="">
                                        <span class="fa-brands fa-twitter"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="fa-brands fa-square-facebook"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="fa-brands fa-instagram"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="fa-brands fa-youtube"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="fa-brands fa-telegram"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="menu-backdrop"></div>
                <!-- End Mobile Menu -->

                <SearchModal @ref=SearchModal />
            </div>
        </div>
    </div>
</div>

@code {
    private string? currentUrl;
    private SearchModal SearchModal { get; set; }

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
        currentCategory.OnChange += () => StateHasChanged();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    [JSInvokable]
    public async Task ShowMobMenu()
    {
        await js.InvokeVoidAsync("mobMenuVisible");
    }

    [JSInvokable]
    public async Task HideMobMenu()
    {
        await js.InvokeVoidAsync("mobMenuUnisible");
    }

    [JSInvokable]
    public async Task DropdownToogle(string elId)
    {
        await js.InvokeVoidAsync("mobDropdownToggle", elId);
    }

    public string CheckCategory(int id)
    {
        return (currentCategory.CurrentCat == id) ? "color: #fd0e30" : string.Empty;
    }

    public string CheckCategory(int id1, int id2)
    {
        return (currentCategory.CurrentCat == id1 || currentCategory.CurrentCat == id2) ? "color: #fd0e30" : string.Empty;
    }
}

