<div class="row">
    <div class="col-md-6">
        <label>@Label</label>
        <InputFile accept=".jpg,.jpeg,.png" OnChange="OnChange" placeholder="@Label" />
    </div>
    <div class="col-md-6" style="text-align: center; height: 400px; min-height: 400px; max-height: 400px;">
        @if (imageBase64 != null)
        {
            <img src="data:image/jpeg;base64, @imageBase64" style="width: 320px; height: 400px; min-width: 320px; min-height: 400px; max-width: 320px; max-height: 400px;" />
        }
        @if (ImageURL != null)
        {
            <img src="@ImageURL" style="width: 320px; height: 400px; min-width: 320px; min-height: 400px; max-width: 320px; max-height: 400px;" />
        }
    </div>
</div>

@code {
    [Parameter] public string Label { get; set; } = "Світлина";
    [Parameter] public EventCallback<string> OnSelectedImage { get; set; }
    [Parameter] public string ImageURL { get; set; }
    private string imageBase64;

    async Task OnChange(InputFileChangeEventArgs e)
    {
        var imagesFiles = e.GetMultipleFiles();

        foreach (var imageFile in imagesFiles)
        {
            var buffer = new byte[imageFile.Size];
            await imageFile.OpenReadStream().ReadAsync(buffer);
            imageBase64 = Convert.ToBase64String(buffer);
            await OnSelectedImage.InvokeAsync(imageBase64);
            ImageURL = null;
            StateHasChanged();
        }
    }
}
