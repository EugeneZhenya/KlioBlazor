<div class="movie-item mb-50" style="width: 380px; margin-right: 30px;">
    <div class="section-title text-center text-lg-start">
        <span class="sub-title">Історія</span>
    </div>
    <div class="movie-poster">
        <a href="">
            <img src="@Movie.Poster" alt="@Movie.Title" />
        </a>
    </div>
    <div class="movie-content">
        <div class="top">
            <h5 class="title"><a href="movie-details.html">@Movie.TitleBrief</a></h5>
            <span class="date">@Movie.ReleaseDate.Year</span>
        </div>
        <div class="bottom">
            <ul>
                <li>
                    <span class="quality" style="color: lightgreen; border-color: lightgreen;">0+</span>
                </li>
                <li>
                    <span class="duration">
                        <i class="fa-solid fa-clock"></i> 28 хв
                    </span>
                    <span class="rating">
                        <i class="fa-solid fa-thumbs-up"></i> 3.5
                    </span>
                </li>
            </ul>
            <div class="mt-3 text-center">
                <a class="btn">Редагувати</a>
                <button type="button" class="btn" @onclick="@(() => DeleteMovie.InvokeAsync(Movie))">Видалити</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; }
}
