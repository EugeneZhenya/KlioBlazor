@page "/country/{CountryId:int}"
@page "/country/{CountryId:int}/{CountryName}"

@inject NavigationManager NavManager
@inject ICountryRepository countryRepository
@inject CurrentCategory currentCategory

<PageTitle>@allMeta.Title</PageTitle>

<MetaContent MetaData="allMeta" />

@if (model == null)
{
    <div id="preloader" style="height: 75vh;">
        <div id="loading-center">
            <div id="loading-center-absolute">
                <img src="img/preloader.svg" alt="">
            </div>
        </div>
    </div>
}
else
{
    <section class="movie-details-area" style="background-image: url('@($"{appState.KlioContentUrl}countries/{model.Country.BackgroundUrl}")')">
        <div class="movie-details-overlay">
            <div class="container">
                <div class="row align-items-center position-relative">
                    <div class="col-xl-6 col-lg-6" style="align-self: start; margin-top: 10px;">
                        <div class="movie-details-img">
                            <img src="@($"{appState.KlioContentUrl}countries/{model.Country.EmblemUrl}")" alt="@model.Country.Name" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="movie-details-content">
                            <div class="section-title title-style-two">
                                <span class="sub-title">Фільми країни</span>
                            </div>
                            <h2>
                                @model.Country.Name
                            </h2>
                            <div class="banner-meta">
                                <ul style="justify-content: end;">
                                    <li class="release-time">
                                        <span>@model.CountryMovies.Count фільмів</span>
                                    </li>
                                </ul>
                            </div>
                            <RenderMarkdown MarkdownContent="@model.Country.Description" />
                            <div class="movie-details-prime">
                                <ul style="min-width: 100%;">
                                    <li class="share"><a href="#"><i class="fa-solid fa-share-nodes"></i> Поширити</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<MoviesArea Movies="moviesOfCountry" Title="@nameOfCountry" Subtitle="Фільми країни" />

@code {
    [CascadingParameter] public AppState appState { get; set; }
    [Parameter] public int CountryId { get; set; }
    [Parameter] public string CountryName { get; set; }
    OpenGraphModel allMeta = new OpenGraphModel();
    DetailsCountryDTO model;
    private List<Movie> moviesOfCountry;
    private string nameOfCountry;

    protected async override Task OnInitializedAsync()
    {
        currentCategory.SetCurrentCategory(0);
        model = await countryRepository.GetDetailsCountryDTO(CountryId);

        allMeta.Title = model.Country.Name + " :: Український медійний архів 'KLIO'";
        allMeta.Description = model.Country.Name + " он-лайн, " + model.Country.Description;
        allMeta.Robots = "all";
        allMeta.Author = "Eugene Baklanov";
        allMeta.Keywords = "Klio, архів, video, відео, історія, література, політика, музика, music, наживо, трансляція, пряма трансляція, дивитися он-лайн, фільм, серіал, сезон, епізод, мультфільм, мультсерал";
        allMeta.Type = "article";
        allMeta.Image = $"{appState.KlioContentUrl}countries/{model.Country.BackgroundUrl}";
        allMeta.SecureImage = allMeta.Image;
        allMeta.ImageWidth = 1920;
        allMeta.ImageHeight = 1080;
        allMeta.ImageType = "image/jpeg";
        allMeta.Url = NavManager.Uri;
        allMeta.SiteName = "Медійний архів 'KLIO'";
        allMeta.Locale = "uk_UA";
        allMeta.FBAdmins = "100007730161243,100002204709179";
        allMeta.FBAppId = "885986785210347";
        allMeta.Image2 = $"{appState.KlioContentUrl}countries/{model.Country.BackgroundUrl}";
        allMeta.SecureImage2 = allMeta.Image2;
        allMeta.ImageWidth2 = 1920;
        allMeta.ImageHeight2 = 1080;
        allMeta.ImageType2 = "image/jpeg";

        moviesOfCountry = model.CountryMovies;
        nameOfCountry = model.Country.Name;
    }
}
