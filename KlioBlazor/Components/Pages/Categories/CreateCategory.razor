@page "/category/create"
@inject NavigationManager NavManager

<PageTitle>@allMeta.Title</PageTitle>

<MetaContent MetaData="allMeta" />

<BreadcrumbArea>
    <TitleContent>
        <h2 class="title">Додати <span>категорію</span></h2>
    </TitleContent>
    <ChildContent>
        <li class="breadcrumb-item"><a href="">Домівка</a></li>
        <li class="breadcrumb-item active" aria-current="page">Додати категорію</li>
    </ChildContent>
</BreadcrumbArea>

<!-- contact-area -->
<section class="contact-area contact-bg" style="background-image: url('img/contact_bg.jpg')">
    <div class="container">
        <div class="row">
                <div class="col-xl-12 col-lg-11">
                    <div class="contact-form-wrap">
                        <div class="widget-title mb-50">
                            <h5 class="title">Додати категорію</h5>
                        </div>
                        <div class="contact-form">
                            <EditForm Model="category" OnSubmit="Create">
                                <div class="row">
                                    <InputText placeholder="Назва *" @bind-Value="@category.Name" />
                                    <InputTextArea placeholder="Опис..." @bind-Value="@category.Description" />
                                    <button class="btn" type="submit">Зберегти</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<!-- contact-area-end -->

