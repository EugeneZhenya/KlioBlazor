@page "/movies/edit/{MovieId:int}"
@inject NavigationManager NavManager

<PageTitle>@allMeta.Title</PageTitle>

<MetaContent MetaData="allMeta" />

<BreadcrumbArea>
    <TitleContent>
        <h2 class="title">Додати <span>відео</span></h2>
