    <section class="episode-area episode-bg" style="background-image: url('img/episode_bg.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row w-100">
                        <div class="movie-episode-wrap">
                            <div class="episode-top-wrap">
                                <div class="section-title">
                                    <span class="sub-title">Додаткова інформація</span>
                                    <h2 class="title">Про фільм</h2>
                                </div>
                                <div class="total-views-count">
                                    <p>@model.Movie.ViewCounter <i class="fa-regular fa-eye"></i></p>
                                </div>
                            </div>
                            <div class="row episode-watch-wrap">
                                @foreach (var inf in model.MovieInfos)
                                {
                                    switch (inf.Info)
                                    {
                                        case "FullDescription":
                                            @infoFullDescr(inf);
                                            break;
                                        case "Tracklist":
                                            @infoTracklist(inf);
                                            break;
                                        case "OriginalLanguage":
                                            switch (inf.Text)
                                            {
                                                case "uk":
                                                    @infoOrigLangUA(inf);
                                                    break;
                                                case "en":
                                                    @infoOrigLangEN(inf);
                                                    break;
                                                case "pl":
                                                    @infoOrigLangPL(inf);
                                                    break;
                                            }
                                            break;
                                        case "TranslateLanguage":
                                            switch (inf.Text)
                                            {
                                                case "uk":
                                                    @infoTransLangUA(inf);
                                                    break;
                                            }
                                            break;
                                        case "Youtube":
                                            @infoYoutubeUrl(inf);
                                            break;
                                        case "KlioYoutube":
                                            @infoKlioYoutube(inf);
                                            break;
                                        case "InstagramVideo":
                                            @infoInstagramVideoUrl(inf);
                                            break;
                                        case "TmdbMovieId":
                                            @infoTmdbMovie(inf);
                                            break;
                                        case "ImdbId":
                                            @infoImdbMovie(inf);
                                            break;
                                        case "WikiUrl":
                                            @infoWikiMovie(inf);
                                            break;
                                        case "WebSiteURL":
                                            @infoMovieWebSite(inf);
                                            break;
                                        case "Budget":
                                            @infoBudget(inf);
                                            break;
                                        case "Profit":
                                            @infoProfit(inf);
                                            break;
                                        case "Award":
                                            @infoAward(inf);
                                            break;
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

